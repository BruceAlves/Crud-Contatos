@model ContatoModel
@{
    ViewData["Title"] = "Comfirmação de deletar o contato";
}

<div class="text-center" >
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-danger btn-block" role="button" asp-controller="Contato" asp-action="Index" >Cancelar exclusão</a>
<a  class="btn btn-success btn-block" role="button" asp-controller="Contato" asp-route-id="@Model.Id"  asp-action="Apagar" >Confirmar exclusão</a>